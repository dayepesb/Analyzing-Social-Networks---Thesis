package co.edu.poli.Edge;

import co.edu.poli.Node.Node;
import co.edu.poli.Node.NodeUniq;

public class EdgeDirect implements Edge {
	private long id;
	private Node nodeA;
	private Node nodeB;
	private double weight;
	private String label;

	public EdgeDirect() {
		id = -1;
		nodeA = new NodeUniq();
		nodeB = new NodeUniq();
		weight = 0.;
		label = "Empty";
	}

	public EdgeDirect(long id) {
		this.id = id;
		nodeA = new NodeUniq();
		nodeB = new NodeUniq();
		weight = 0.;
		label = "Empty";
	}
	public EdgeDirect(long id,Node nodeA,Node nodeB){
		id = -1;
		this.nodeA = nodeA;
		this.nodeB = nodeB;
		weight = 1.;
		label = "Empty";
	}
	public EdgeDirect(long id,Node nodeA,Node nodeB,double weight){
		id = -1;
		this.nodeA = nodeA;
		this.nodeB = nodeB;
		weight = weight;
		label = "Empty";
	}
	public EdgeDirect(long id,Node nodeA,Node nodeB,String label){
		id = -1;
		this.nodeA = nodeA;
		this.nodeB = nodeB;
		weight = 1.;
		label = "Empty";
	}
	

	// geters
	@Override
	public long getId() {
		return this.id;
	}

	@Override
	public Node getNodeA() {
		return this.nodeA;
	}

	@Override
	public Node getNodeB() {
		return this.nodeB;
	}

	@Override
	public double getWeight() {
		return this.weight;
	}

	@Override
	public String getLabel() {
		return this.getLabel();
	}

	// setters
	@Override
	public void setId(long id) {
		this.id = id;
	}

	@Override
	public void setNodeA(Node nodeA) {
		this.nodeA = nodeA;
	}

	@Override
	public void setNodeB(Node nodeB) {
		this.nodeB = nodeB;
	}

	@Override
	public void setWeight(double weight) {
		this.weight = weight;
	}

	@Override
	public void setLabel(String label) {
		this.label = label;
	}

	@Override
	public String toString() {
		return String.format("ID : %d%nLabel : %s%nNode A :%n%s%nNode B :%n%s%nWeight : %.5f%n", this.id, this.label,
				this.nodeA.toString(), this.nodeB.toString(), this.weight);
	}

}
